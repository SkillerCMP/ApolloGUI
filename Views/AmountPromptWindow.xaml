<Window x:Class="ApolloGUI.AmountPromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fill MOD" Height="220" Width="400" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
  <Grid Margin="12">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,8,0" VerticalAlignment="Center" Text="Format:"/>
    <ComboBox x:Name="cmbType" Grid.Row="0" Grid.Column="1" Width="160" IsEnabled="True">
      <ComboBoxItem Content="HEX"/>
      <ComboBoxItem Content="FLOAT"/>
    </ComboBox>

    <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,8,8,0" VerticalAlignment="Center" Text="Byte order:"/>
    <ComboBox x:Name="cmbEndian" Grid.Row="1" Grid.Column="1" Width="160" Margin="0,8,0,0" IsEnabled="True">
      <ComboBoxItem Content="BIG"/>
      <ComboBoxItem Content="LITTLE"/>
      <ComboBoxItem Content="TXT"/>
    </ComboBox>

    <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,8,8,0" VerticalAlignment="Center" Text="Original:"/>
    <TextBlock x:Name="lblOriginal" Grid.Row="2" Grid.Column="1" Margin="0,8,0,0" VerticalAlignment="Center" Text=""/>

    <TextBlock Grid.Row="3" Grid.Column="0" Margin="0,8,8,0" VerticalAlignment="Center" Text="Value:"/>
    <TextBox x:Name="txtValue" Grid.Row="3" Grid.Column="1" Margin="0,8,0,0"/>

    <!-- Inline character counter -->
    <TextBlock x:Name="lblCounter" Grid.Row="4" Grid.Column="1" Margin="0,4,0,0"
               HorizontalAlignment="Right" Foreground="Gray" FontSize="11" Text="0/0"/>

    <StackPanel Grid.Row="5" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
      <Button x:Name="btnOK" Width="90" Margin="0,0,8,0" Content="OK" Click="btnOK_Click"/>
      <Button Width="90" Content="Cancel" IsCancel="True"/>
    </StackPanel>
  </Grid>
</Window>
