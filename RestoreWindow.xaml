<Window x:Class="ApolloGUI.RestoreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Restore Backup" Height="420" Width="720" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="txtInfo" Text="Select a backup to restore." Margin="0,0,0,8"/>
        <ListView x:Name="lstBackups" Grid.Row="1" SelectionMode="Single">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="File" Width="380" DisplayMemberBinding="{Binding File}"/>
                    <GridViewColumn Header="Timestamp" Width="180" DisplayMemberBinding="{Binding Timestamp}"/>
                    <GridViewColumn Header="Path" Width="320" DisplayMemberBinding="{Binding Path=Path}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="Open Folder" Width="110" Margin="0,0,8,0" Click="OpenFolder_Click"/>
            <Button Content="Restore" Width="100" Margin="0,0,8,0" IsDefault="True" Click="Restore_Click"/>
            <Button Content="Cancel" Width="100" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
