<Window x:Class="ApolloGUI.ModFillDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApolloGUI"
        mc:Ignorable="d"
        Title="Fill MODs" Height="640" Width="920" WindowStartupLocation="CenterOwner"
        MinHeight="420" MinWidth="720">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="10">
            <TextBlock Text="Select a row for each MOD token." VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBlock Text="{Binding CodeName}" FontWeight="SemiBold" VerticalAlignment="Center"/>
        </StackPanel>

        <TabControl x:Name="Tabs" Margin="10" />
        
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Right" Margin="10">
            <Button Content="Cancel" Width="90" Margin="0,0,6,0" IsCancel="True"/>
            <Button Content="Apply" Width="120" IsDefault="True" Click="Apply_Click"/>
        </StackPanel>
    </DockPanel>
</Window>
